{
    "setup": {
        "seed": 42,
        "device": "cpu",
        "dtype": "torch.float32",
        "trainer_name": "static",
        "train": true,
        "test": false,
        "ckpt": false
    },

    "model": {
        "name": "goat",
        "latent_tokens_size": [256],
        "tokenization_strategy": "random",
        "geometry_aware_sampling": true,
        "args": {
            "magno": {
                "coord_dim": 2,
                "radius": 0.100,
                "radius_mode": "dynamic",
                "dynamic_radius_k": 3,
                "dynamic_radius_alpha": 1.2,
                "hidden_size": 64,
                "mlp_layers": 3,
                "lifting_channels": 64
            },
            "transformer": {
                "patch_size": 2,
                "hidden_size": 256
            }
        }
    },

    "dataset": {
        "name": "Elasticity",
        "metaname": "elliptic_pdes/Elasticity",
        "base_path": "datasets/time_indep/",
        "train_size": 512,
        "val_size": 128,
        "test_size": 256,
        "batch_size": 64,
        "num_workers": 4,
        "shuffle": true
    },

    "optimizer": {
        "name": "adamw",
        "args": {
            "lr": 8e-4,
            "weight_decay": 1e-05,
            "epoch": 300,
            "loss_scale": 1.0,
            "eval_every_eps": 2,
            "scheduler": "mix",
            "max_lr": 1e-3,
            "min_lr": 1e-4,
            "final_lr": 5e-5
        }
    },

    "path": {
        "ckpt_path": ".ckpt/examples/time_indep/elasticity_random_dynamic.pt",
        "loss_path": ".loss/examples/time_indep/elasticity_random_dynamic.png",
        "result_path": ".results/examples/time_indep/elasticity_random_dynamic.png",
        "database_path": ".database/examples/time_indep/elasticity_random_dynamic.csv"
    }
}
